{
  "name": "frontend",
  "projectType": "application",
  "root": "apps/frontend",
  "sourceRoot": "apps/frontend/src",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "root": "apps/frontend",
        "outputPath": "dist/apps/frontend"
      },
      "configurations": {
        "production": {
          "dev": false
        },
        "development": {
          "dev": true
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "frontend:build",
        "dev": true,
        "port": 4200
      },
      "configurations": {
        "production": {
          "dev": false,
          "port": 3000
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "frontend:build",
        "outputPath": "dist/static"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/frontend/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/apps/frontend"],
      "options": {
        "jestConfig": "apps/frontend/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "analyze": {
      "executor": "@nx/next:build",
      "options": {
        "outputPath": "dist/apps/frontend",
        "root": "apps/frontend",
        "analyze": true
      }
    },
    "preview": {
      "executor": "@nx/next:start",
      "options": {
        "buildTarget": "frontend:build:production"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t real-estate-frontend -f apps/frontend/Dockerfile ."
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 3000:3000 real-estate-frontend"
      }
    },
    "help": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "echo 'ðŸ›  Nx Frontend Help'",
            "forwardAllArgs": false
          },
          {
            "command": "echo 'nx serve frontend              - Run dev server on port 4200'",
            "forwardAllArgs": false
          },
          {
            "command": "echo 'nx build frontend              - Build the frontend app'",
            "forwardAllArgs": false
          },
          {
            "command": "echo 'nx preview frontend            - Serve production build (next start)'",
            "forwardAllArgs": false
          },
          {
            "command": "echo 'nx docker-build frontend        - Build Docker image'",
            "forwardAllArgs": false
          },
          {
            "command": "echo 'nx docker-run frontend          - Run container at http://localhost:3000'",
            "forwardAllArgs": false
          }
        ]
      }
    }
  },
  "tags": []
}
